<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#FFBB66"
    tools:context="com.example.usuario.a01_helloworld.MainActivity">

    <!--

    android:gravity         para centrar los elementos
    android:orientation     para la disposiciÃ³n de los elementos

    -->
    <TextView
        android:id="@+id/activity_main_corrects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_main_errors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_main_question_number"
        android:textSize="30dp"
        android:textColor="#6666ff"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/activity_main_question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6666ff"
        android:textColor="#FFFF"
        android:height="90dp"
        android:padding="20dp"
        android:textSize="20sp"
        android:text="@string/activity_main_question_text"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/activity_main_button_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="150dp"
        android:text="YES"/>

    <Button
        android:id="@+id/activity_main_button_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="150dp"
        android:text="NO"/>
    <TextView
        android:id="@+id/activity_main_title_text"
        android:textSize="30dp"
        android:textColor="#FF0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="250dp"
        android:textAlignment="center"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/activity_main_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/question_mark"/>


</LinearLayout>
