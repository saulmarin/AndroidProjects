<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#888"
    tools:context="com.marin.saul.a02_adventure.MainActivity">

    <ImageView
        android:id="@+id/activity_main_scene_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/main_title"/>

    <TextView
        android:id="@+id/activity_main_scene_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#3F51B5"
        android:textStyle="italic"
        android:textColor="#FFF"
        android:fontFamily="monospace"
        android:textSize="13dp"
        android:padding="5dp"
        android:layout_below="@+id/activity_main_scene_image"
        tools:text="Hola Hola"/>

    <ImageButton
        android:id="@+id/activity_main_button_north"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/activity_main_scene_text"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/activity_main_button_west"
        android:src="@drawable/up"/>


    <ImageButton
        android:id="@+id/activity_main_button_east"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/activity_main_button_north"
        android:layout_toRightOf="@+id/activity_main_button_look"
        android:src="@drawable/right"/>

    <ImageButton
        android:id="@+id/activity_main_button_west"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/activity_main_button_north"
        android:src="@drawable/left"
        />

    <ImageButton
        android:id="@+id/activity_main_button_south"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/activity_main_button_look"
        android:layout_toRightOf="@id/activity_main_button_west"
        android:src="@drawable/down"/>

    <ImageButton
        android:id="@+id/activity_main_button_look"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/activity_main_button_north"
        android:layout_toRightOf="@id/activity_main_button_west"
        android:src="@drawable/look"/>

    <ImageButton
        android:id="@+id/activity_main_button_inventory"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/activity_main_scene_text"
        android:layout_toRightOf="@id/activity_main_button_north"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/inventory"/>

    <ImageButton
        android:id="@+id/activity_main_button_take"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/activity_main_scene_text"
        android:layout_toRightOf="@id/activity_main_button_inventory"
        android:src="@drawable/take"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:id="@+id/activity_main_button_drop"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/activity_main_button_take"
        android:layout_alignParentRight="true"
        android:src="@drawable/drop"/>

    <ImageButton
        android:id="@+id/activity_main_button_help"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/activity_main_button_drop"
        android:layout_alignParentRight="true"
        android:src="@drawable/help"/>

</RelativeLayout>
